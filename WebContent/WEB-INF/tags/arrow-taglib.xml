<?xml version='1.0' encoding='UTF-8'?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
	            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	            xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
	            version="2.0">
	            
	<namespace>http://arrow-tech.vn/arrow</namespace>
	
	<!-- simple outputs -->
	<tag>
		<tag-name>outputText</tag-name>
		<source>outputText.xhtml</source>
	</tag>	
	
	<tag>
		<tag-name>outputDate</tag-name>
		<source>outputDate.xhtml</source>
	</tag>
	<tag>
		<tag-name>outputTime</tag-name>
		<source>outputTime.xhtml</source>
	</tag>
	<tag>
		<tag-name>outputDateTime</tag-name>
		<source>outputDateTime.xhtml</source>
	</tag>
	
	<!-- commands / buttons -->	
	<tag>
		<tag-name>confirmButton</tag-name>
		<source>confirmButton.xhtml</source>
	</tag>
	
	
	<!-- simple inputs -->
	<tag>
		<tag-name>inputText</tag-name>
		<source>inputText.xhtml</source>
	</tag>
	
	
	
	
	<!-- custom components -->
	
	<tag>
		<tag-name>dataTable</tag-name>
		<component>
			<component-type>arrow.framework.faces.component.dialog.ArrowDataTable</component-type>			
		</component>
	</tag>
	
	<tag>
		<tag-name>columnConfig</tag-name>
		<component>
			<component-type>synergix.th6.framework.faces.component.datatable.SynColumnConfig</component-type>			
		</component>
	</tag>
	
	<tag>
		<tag-name>column</tag-name>
		<component>
			<component-type>synergix.th6.framework.faces.component.datatable.SynColumn</component-type>			
		</component>
	</tag>
	
	<tag>
    	<tag-name>include</tag-name>
	    <component>
	        <component-type>synergix.th6.framework.faces.component.facelet.SynInclude</component-type>
	    </component>
	    <attribute>
	        <name>src</name>
	        <required>true</required>
	        <type>java.lang.String</type>
	    </attribute>
	</tag>
	
	<tag>
		<tag-name>inputEntityWithoutAjax</tag-name>
		<component>
			<component-type>synergix.th6.framework.faces.component.input.SynInputEntity</component-type>			
		</component>
	</tag>
	
	<tag>
		<tag-name>autoCompleteEntityWithoutAjax</tag-name>
		<component>
			<component-type>synergix.th6.framework.faces.component.input.SynAutoCompleteEntity</component-type>			
		</component>
	</tag>
	
	<tag>
		<tag-name>inputEntity</tag-name>
		<source>inputEntity.xhtml</source>
	</tag>
	
	<tag>
		<tag-name>dialog</tag-name>
		<component>
			<component-type>arrow.framework.faces.component.dialog.ArrowDialog</component-type>			
		</component>
	</tag>
		
</facelet-taglib>